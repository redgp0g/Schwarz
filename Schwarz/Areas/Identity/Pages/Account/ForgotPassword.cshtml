@page
@model ForgotPasswordModel
@{
    ViewData["Title"] = "Forgot your password?";
}

<h1>@ViewData["Title"]</h1>
<h2>Digite seu usuário.</h2>
<hr />
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Usuario" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Usuario" class="form-label"></label>
                <span asp-validation-for="Input.Usuario" class="text-danger"></span>
            </div>
            <button type="submit" class="w-100 btn btn-lg btn-primary">Reset Password</button>
        </form>
    </div>
</div>
<style>
    .alert-success{
        background-color: rgb(61 32 32);
        border-color: rgb(88 48 46);
    }
</style>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
