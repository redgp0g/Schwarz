@page
@model IndexModel
@{
	ViewData["Title"] = "Perfil";
	ViewData["ActivePage"] = ManageNavPages.Index;
}
<h3>@ViewData["Title"]</h3>
@Html.Partial("_Bootstrap")
<partial name="_StatusMessage" for="StatusMessage" />
<div class="container mx-auto text-black">
	<div class="flex justify-center px-6 my-12">
		<div class="w-full lg:w-7/12 bg-white p-2 rounded-lg">
			<div class="row">
					<form id="profile-form" method="post" enctype="multipart/form-data">
						<div asp-validation-summary="ModelOnly" class="text-danger"></div>
						<label asp-for="Input.Matricula" class="block mb-2 text-xl font-bold text-gray-700l flex items-center"></label>
						<div class="form-floating">
							<input asp-for="Input.Matricula" class="w-full px-3 py-3 text-xl leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" />
						</div>
						<label asp-for="Input.Nome" class="block mb-2 text-xl font-bold text-gray-700l flex items-center"></label>

						<div class="form-floating">
							<input asp-for="Input.Nome" class="w-full px-3 py-3 text-xl leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" />
						</div>
						<label asp-for="Input.Setor" class="block mb-2 text-xl font-bold text-gray-700l flex items-center"></label>
						<div class="form-floating">
							<select asp-for="Input.Setor" class="w-full px-3 py-3 text-xl leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" asp-items="ViewBag.Setores"></select>
						</div>
						<label asp-for="Input.DataNascimento" class="block mb-2 text-xl font-bold text-gray-700l flex items-center"></label>
						<div class="form-floating">
							<input asp-for="Input.DataNascimento" class="w-full px-3 py-3 text-xl leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" />
						</div>
						<label asp-for="Input.Turno" class="block mb-2 text-xl font-bold text-gray-700l flex items-center"></label>
						<div class="form-floating">
							<select asp-for="Input.Turno" class="w-full px-3 py-3 text-xl leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline">
								<option value="1° Turno">1° Turno</option>
								<option value="2° Turno">2° Turno</option>
								<option value="3° Turno">3° Turno</option>
								<option value="ADM">ADM</option>
							</select>
						</div>
						<label asp-for="Input.Email" class="block mb-2 text-xl font-bold text-gray-700l flex items-center"></label>
						<div class="form-floating">
							<input asp-for="Input.Email" class="w-full px-3 py-3 text-xl leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" />
						</div>
						<label asp-for="Input.Cargo" class="block mb-2 text-xl font-bold text-gray-700l flex items-center"></label>
						<div class="form-floating">
							<input asp-for="Input.Cargo" class="w-full px-3 py-3 text-xl leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" />
						</div>
						<label asp-for="Input.Ramal" class="block mb-2 text-xl font-bold text-gray-700l flex items-center"></label>
						<div class="form-floating">
							<ejs-maskedtextbox ejs-for="Input.Ramal" mask="0000" floatLabelType="Never"></ejs-maskedtextbox>
						</div>
						<label asp-for="Input.Telefone" class="block mb-2 text-xl font-bold text-gray-700l flex items-center"></label>
						<div class="form-floating">
							<ejs-maskedtextbox ejs-for="Input.Telefone" mask="(41) 00000-0000" floatLabelType="Never"></ejs-maskedtextbox>
						</div>
						<div class="form-floating">
							@if (Model.Input.Foto != null)
							{
								<div class="mb-8">
									<img class="object-center object-cover rounded-full h-48 w-36" src="data:image;base64,@(Convert.ToBase64String(Model.Input.Foto))" alt="Imagem do ">
								</div>
							}
							<input asp-for="Input.NovaFoto" class="form-control" type="file" accept="image/*" />
							<label asp-for="Input.Foto" class="form-label"></label>
							<span asp-validation-for="Input.Foto" class="text-danger"></span>
						</div>
						<button id="update-profile-button" type="submit" class="text-xl w-content px-2 py-2 font-bold text-white bg-gradient-to-r from-green-300 to-teal-500 rounded-full hover:bg-gradient-to-r hover:from-teal-300 hover:to-green-500 rounded-full hover:cursor-pointer focus:outline-none focus:shadow-outline">Salvar</button>
					</form>
			</div>
		</div>
	</div>
</div>
@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
