@page
@model ChangePasswordModel
@{
	ViewData["Title"] = "Mudar Senha";
}

<h3 class="text-center text-4xl my-2">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="row justify-center flex">
	<div class="col-md-6">
		<form id="change-password-form" method="post">
			<div asp-validation-summary="ModelOnly" class="text-red-500"></div>
			<div class="flex flex-col">
				<label asp-for="Input.OldPassword" class="block mb-2 text-xl font-bold text-white flex items-center"></label>
				<input asp-for="Input.OldPassword" class="w-full px-3 py-3 text-xl leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" autocomplete="current-password" placeholder="Digite sua senha atual" />
				<span asp-validation-for="Input.OldPassword" class="text-danger"></span>
			</div>
			<div class="flex flex-col">
				<label asp-for="Input.NewPassword" class="block mb-2 text-xl font-bold text-white flex items-center"></label>
				<input asp-for="Input.NewPassword" class="w-full px-3 py-3 text-xl leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" autocomplete="new-password" placeholder="Digite a nova senha" />
				<span asp-validation-for="Input.NewPassword" class="text-danger"></span>
			</div>
			<div class="flex flex-col">
				<label asp-for="Input.ConfirmPassword" class="block mb-2 text-xl font-bold text-white flex items-center"></label>
				<input asp-for="Input.ConfirmPassword" class="w-full px-3 py-3 text-xl leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" autocomplete="new-password" aria-required="true" placeholder="Digite novamente a nova senha" />
				<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
			</div>
			<input type="submit" value="Atualizar" class="w-full px-4 py-4 font-bold text-white bg-gradient-to-r from-lime-300 to-green-500 rounded-full hover:bg-gradient-to-r hover:from-green-300 hover:to-lime-500 rounded-full hover:cursor-pointer focus:outline-none focus:shadow-outline" />
		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
