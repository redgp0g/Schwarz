@page
@model ChangePasswordModel
@{
	ViewData["Title"] = "Mudar Senha";
}

<h3 class="text-center text-white text-4xl my-2">@ViewData["Title"]</h3>
<partial name="_StatusMessage" for="StatusMessage" />
<div class="items-center flex justify-center max-h-screen">
	<div class="rounded-md bg-white w-max p-12 items-center flex">
		<form id="change-password-form" method="post">
			<div asp-validation-summary="ModelOnly" class="text-red-500"></div>
			<div class="flex flex-col my-3">
				<label asp-for="Input.OldPassword" class="block mb-2 text-xl font-bold text-black flex items-center"></label>
				<input asp-for="Input.OldPassword" class="w-full px-3 py-3 text-xl leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" autocomplete="current-password" placeholder="Digite sua senha atual" />
				<span asp-validation-for="Input.OldPassword" class="text-danger"></span>
			</div>
			<div class="flex flex-col my-3">
				<label asp-for="Input.NewPassword" class="block mb-2 text-xl font-bold text-black flex items-center"></label>
				<input asp-for="Input.NewPassword" class="w-full px-3 py-3 text-xl leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" autocomplete="new-password" placeholder="Digite a nova senha" />
				<span asp-validation-for="Input.NewPassword" class="text-danger"></span>
			</div>
			<div class="flex flex-col my-3">
				<label asp-for="Input.ConfirmPassword" class="block mb-2 text-xl font-bold text-black flex items-center"></label>
				<input asp-for="Input.ConfirmPassword" class="w-full px-3 py-3 text-xl leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" autocomplete="new-password" aria-required="true" placeholder="Digite novamente a nova senha" />
				<span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
			</div>
			<input type="submit" value="Atualizar Senha" class="my-5 border text-white text-lg transition hover:scale-105 duration-100 bg-gray-600 outline p-2 rounded-lg hover:bg-gray-800 btn btn-lg btn-primary" />
		</form>
	</div>
</div>

@section Scripts {
	<partial name="_ValidationScriptsPartial" />
}
