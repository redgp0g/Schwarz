@page
@model RegisterModel
@{
    ViewData["Title"] = "Registrar";
}

<h1>@ViewData["Title"]</h1> 

<div class="row">
    <div class="col-md-4">
        <form id="registerForm" asp-route-returnUrl="@Model.ReturnUrl" method="post">
            <h2>Criar uma conta nova.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-floating">
                <input asp-for="Input.Usuario" class="form-control" autocomplete="username" aria-required="true" />
                <label asp-for="Input.Usuario"></label>
                <span asp-validation-for="Input.Usuario" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.Password" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.Password"></label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <input asp-for="Input.ConfirmPassword" class="form-control" autocomplete="new-password" aria-required="true" />
                <label asp-for="Input.ConfirmPassword"></label>
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <div class="form-floating">
                <select asp-for="Input.IDFuncionario" class="form-control" autocomplete="username" aria-required="true">
                    <option value="" disabled selected>Selecione o funcionário</option>
                    @foreach(var funcionario in Model.GetFuncionariosAtivos().Where(x => x.SchwarzUser == null))
                    {
                        <option value="@funcionario.IDFuncionario">@funcionario.Nome</option>
                    }
                </select>
                <label asp-for="Input.IDFuncionario">Funcionário da conta</label>
                <span asp-validation-for="Input.IDFuncionario" class="text-danger"></span>
                </div>

            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Registrar</button>
        </form>
    </div>
    <div class="col-md-6 col-md-offset-2">
        <section>
            <h3>Crie uma conta para aproveitar ao máximo o site.</h3>
            <hr />
        </section>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
