		<input type="radio" class="form-control" asp-for="EmitirAlertaQualidade" value="true">
		<label for="EmitirAlertaQualidade">Sim</label>
		<input type="radio" class="form-control" asp-for="EmitirAlertaQualidade" value="false">
		<label for="EmitirAlertaQualidade">Não</label>
	</div>
	<div class="text-field">
		<label asp-for="QualAlertaQualidade" class="control-laber"></label>
		<input class="form-control" asp-for="QualAlertaQualidade">
	</div>
	<div class="text-field">
		<label asp-for="IDFuncionarioAlertaQualidade" class="control-laber"></label>
		<select class="form-control" asp-for="IDFuncionarioAlertaQualidade">
			<option selected disabled value="">Selecione o responsável</option>
			@foreach (var func in Model.GetFuncionarios().Where(x => x.Ativo == true).OrderBy(x => x.Nome))
			{
				<option value="@func.IDFuncionario">@func.Nome</option>
			}
		</select>
	</div>
	<div class="text-field">
		<label asp-for="PrazolAlertaQualidade" class="control-laber"></label>
		<input class="form-control" asp-for="PrazolAlertaQualidade">
	</div>
	<div class="text-field">
		<label asp-for="RealizadoAlertaQualidade" class="control-laber"></label>
		<input class="hide" type="radio" asp-for="RealizadoAlertaQualidade" value="true">
