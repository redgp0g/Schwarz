@model IEnumerable<Schwarz.Models.Estoque>

@{
    ViewData["Title"] = "Estoques Solicitados";
    Layout = "_Layout";
}

<h1>Estoques Solicitados</h1>

<div class="container mx-auto px-4 sm:px-8">
    <a asp-action="Create" class="group block max-w-xs ml-auto rounded-lg p-6 bg-white ring-1 ring-slate-900/5 shadow-lg space-y-3 hover:bg-red-600 hover:ring-red-800">
        <div class="flex items-center space-x-3">
            <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                <path stroke-linecap="round" stroke-linejoin="round" d="M12 4.5v15m7.5-7.5h-15" />
            </svg>
            <h3 class="text-slate-900 group-hover:text-white text-sm font-semibold">Solicitar Estoque</h3>
        </div>
    </a>
    <div class="-mx-4 sm:-mx-8 px-4 sm:px-8 py-4 overflow-x-auto my-4">
        <div class="bg-white inline-block min-w-full shadow rounded-lg overflow-hidden p-5">
            <table class="table" id="table">
                <thead>
                    <tr>
                        <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            @Html.DisplayNameFor(model => model.SchwarzUser.Funcionario.Nome)
                        </th>
                        <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            @Html.DisplayNameFor(model => model.Setor)
                        </th>
                        <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            @Html.DisplayNameFor(model => model.Urgencia)
                        </th>
                        <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            @Html.DisplayNameFor(model => model.Data)
                        </th>
                        <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            @Html.DisplayNameFor(model => model.Peca)
                        </th>
                        <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            @Html.DisplayNameFor(model => model.Quantidade)
                        </th>
                        <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider">
                            @Html.DisplayNameFor(model => model.Entregue)
                        </th>
                        <th class="px-5 py-3 border-b-2 border-gray-200 bg-gray-100 text-left text-xs font-semibold text-gray-600 uppercase tracking-wider"></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.SchwarzUser.Funcionario.Nome)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Setor)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Urgencia)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Data)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Peca)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Quantidade) Caixas
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.Entregue)
                            </td>
                            <td>
                                <a style="padding: 7px 10px;margin-top: 0;" class="rounded-lg mt-2 p-6 bg-white ring-2 ring-amber-800 shadow-lg space-y-3 hover:bg-amber-500 hover:text-white inline-block" asp-action="Edit" asp-route-id="@item.IDEstoque">Editar</a>
                                <a style="padding: 7px 10px;" class="rounded-lg mt-2 p-6 bg-white ring-2 ring-red-800 shadow-lg space-y-3 hover:bg-red-600 hover:text-white inline-block" asp-action="Delete" asp-route-id="@item.IDEstoque">Deletar</a>
                                <a style="padding: 7px 10px;" class="rounded-lg mt-2 p-6 bg-white ring-2 ring-blue-800 shadow-lg space-y-3 hover:bg-blue-600 hover:text-white inline-block" asp-action="Details" asp-route-id="@item.IDEstoque">Detalhes</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

<script>
    $(document).ready(function () {
        // inicializa o DataTables
        var table = $('#table').DataTable({
            "language": {
                "url": "https://cdn.datatables.net/plug-ins/1.13.4/i18n/pt-BR.json"
            },
            "dom": '<"row"<"col-sm-12 col-md-6"l><"col-sm-12 col-md-6"f>>' +
                '<"row"<"col-sm-12"tr>>' +
                '<"row"<"col-sm-12 col-md-5"i><"col-sm-12 col-md-7"p>>',
            "lengthMenu": [[10, 25, 50, -1], [10, 25, 50, "All"]],
            "scrollY": "60vh",
            "scrollCollapse": true,
            "autoWidth": true,
            "responsive": true
        });
    });
</script>