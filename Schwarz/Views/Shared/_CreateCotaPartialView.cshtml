@model Schwarz.Models.Cota
@{
	var ordem = 1;
	var ultimacota = Model._context.Cota.Where(x => x.IDPlanoControle == Model.IDPlanoControle).OrderByDescending(x => x.IDCota).FirstOrDefault();
	if (ultimacota != null)
	{
		ordem = ultimacota.Ordem + 1;
	}
	

}
<div class="row bg-white">
	<div class="col-md-4 my-6">
		<form id="createCotaForm" asp-action="Create">
			<div asp-validation-summary="ModelOnly" class="text-danger"></div>
			<div>
				<input type="hidden" asp-for="IDPlanoControle" />
				<div class="form-group">
					<label asp-for="Item" class="control-label"></label>
					<input asp-for="Item" class="form-control" />
					<span asp-validation-for="Item" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Ordem" class="control-label"></label>
					<input asp-for="Ordem" class="form-control" value="@ordem"/>
					<span asp-validation-for="Ordem" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="CaracteristicaEspecial" class="control-label"></label>
					<select asp-for="IDPlanoControle" class="form-control">
						<option value="">Nenhuma</option>
						<option value="Produto">☐ Produto</option>
						<option value="Processo">■ Processo</option>
						<option value="Segurança">● Segurança</option>
						<option value="Cliente">♦ Cliente</option>
					</select>
				</div>
				<div class="form-group">
					<label asp-for="Localizacao" class="control-label"></label>
					<input asp-for="Localizacao" class="form-control" />
					<span asp-validation-for="Localizacao" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="CaracteristicaProduto" class="control-label"></label>
					<input asp-for="CaracteristicaProduto" class="form-control" />
					<span asp-validation-for="CaracteristicaProduto" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="CaracteristicaProcesso" class="control-label"></label>
					<input asp-for="CaracteristicaProcesso" class="form-control" />
					<span asp-validation-for="CaracteristicaProcesso" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Descricao" class="control-label"></label>
					<input asp-for="Descricao" class="form-control" />
					<span asp-validation-for="Descricao" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="Nominal" class="control-label"></label>
					<input asp-for="Nominal" class="form-control" type="number" />
					<span asp-validation-for="Nominal" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="ToleranciaSuperior" class="control-label"></label>
					<input asp-for="ToleranciaSuperior" class="form-control" type="number"/>
					<span asp-validation-for="ToleranciaSuperior" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="ToleranciaInferior" class="control-label"></label>
					<input asp-for="ToleranciaInferior" class="form-control" type="number"/>
