				</div>
				<div class="form-group">
					<label asp-for="AmostragemIP" class="control-label"></label>
					<input asp-for="AmostragemIP" class="form-control" />
					<span asp-validation-for="AmostragemIP" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="MetodoIP" class="control-label"></label>
