					<span asp-validation-for="InstrumentoPrincipal" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="CodigoIP" class="control-label"></label>
					<input asp-for="CodigoIP" class="form-control" />
					<span asp-validation-for="CodigoIP" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="FrequenciaMinimaDiaIP" class="control-label"></label>
