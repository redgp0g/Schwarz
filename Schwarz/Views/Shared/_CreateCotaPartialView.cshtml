					<input asp-for="FrequenciaMinimaFinalIA" class="form-control" />
					<span asp-validation-for="FrequenciaMinimaFinalIA" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="FrequenciaMinimaAjusteIA" class="control-label"></label>
					<input asp-for="FrequenciaMinimaAjusteIA" class="form-control" />
					<span asp-validation-for="FrequenciaMinimaAjusteIA" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="FrequenciaMinimaHoraIA" class="control-label"></label>
					<input asp-for="FrequenciaMinimaHoraIA" class="form-control" />
					<span asp-validation-for="FrequenciaMinimaHoraIA" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="AmostragemIA" class="control-label"></label>
					<input asp-for="AmostragemIA" class="form-control" />
					<span asp-validation-for="AmostragemIA" class="text-danger"></span>
				</div>
				<div class="form-group">
					<label asp-for="MetodoIA" class="control-label"></label>
					<select asp-for="MetodoIA" class="form-control">
						<option value="MT">Monitoramento</option>
						<option value="RI">Registro de Inspeção</option>
						<option value="CEP">Controle Estatístico do Produto</option>
