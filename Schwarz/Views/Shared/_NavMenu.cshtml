<script>
    function toggleHidden(id, idbtn = "") {
        $(`#${id}`).toggleClass("hidden");

        var isAutoClose = $(`#${id}`).attr("aria-autoclose");

        if (isAutoClose == "false") {
            $(`#${id}`).attr("aria-autoclose", "true");
            document.addEventListener('click', function (event) {
                const element = document.getElementById(id);

                if (!element.contains(event.target) && event.target.id !== idbtn) {
                    $(`#${id}`).addClass("hidden");
                }
            });
        }
    }
</script>