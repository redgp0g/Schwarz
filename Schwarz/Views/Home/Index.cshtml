@using Microsoft.AspNetCore.Identity
@using Schwarz.Areas.Identity.Data
@using Syncfusion.EJ2
@using Syncfusion.EJ2.Navigations

@{
    ViewData["Title"] = "Página Inicial";
}

@section ControlsSection{
    <div class="col-lg-12 control-section default-carousel-section pt-12">
        <div class="e-sample-resize-container carousel-sample">
            @(Html.EJS().Carousel("defaultCarousel").CssClass("default-carousel")
                .Items(new List<CarouselItem> {
        new CarouselItem { Template = "#itemTemplate1"  },
        new CarouselItem { Template = "#itemTemplate2"  },
        new CarouselItem { Template = "#itemTemplate3"  },
        new CarouselItem { Template = "#itemTemplate4"  }
        })
                .Render()
                )
        </div>
    </div>
    <script id="itemTemplate1" type="text/x-template">
        <figure class="img-container">
            <img src="@Url.Content("~/image/ideia implantada 1.jpeg")" class="w-full h-full rounded-lg border border-white"/>
        </figure>
    </script>
    <script id="itemTemplate2" type="text/x-template">
        <figure class="img-container">
            <img src="@Url.Content("~/image/ideia implantada 2.jpeg")" class="w-full h-full rounded-lg border border-white"/>
        </figure>
    </script>
    <script id="itemTemplate3" type="text/x-template">
        <figure class="img-container">
            <img src="@Url.Content("~/image/ideia implantada 3.jpeg")" class="w-full h-full rounded-lg border border-white"/>
        </figure>
    </script>
    <script id="itemTemplate4" type="text/x-template">
        <figure class="img-container">
            <img src="@Url.Content("~/image/ideia implantada 4.jpeg")" class="w-full h-full rounded-lg border border-white"/>
        </figure>
    </script>
}

<style>
    .default-carousel-section .carousel-sample {
        margin: 0 auto 2em;
        max-width: 500px;
        height: 300px;
    }

    .default-carousel .e-carousel-items .e-carousel-item .img-container {
        height: 100%;
    }

    .default-carousel .e-carousel-items .e-carousel-item .img-caption {
        bottom: 5em;
        color: #fff;
        font-size: 12pt;
        height: 2em;
        position: relative;
        padding: 0.3em 1em;
        text-align: center;
        width: 100%;
    }
</style>