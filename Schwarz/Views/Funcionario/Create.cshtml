@using Schwarz.Statics
@model Schwarz.Models.Funcionario

@{
    ViewData["Title"] = "Create";
    Layout = "_Layout";
}
<div class="container mx-auto">
    <div class="flex justify-center px-6 my-12">
        <div class="border border-1 border-red-500 w-full lg:w-7/12 bg-white p-2 rounded-lg">
            <h3 class="pt-4 text-2xl text-center">Formulário de Edição</h3>
            <form id="form" method="post" class="px-8">
                <div class="mb-4">
                    <label asp-for="Matricula" class="block mb-2 text-sm font-bold"></label>
                    <input asp-for="Nome" class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"></input>
                    @Html.ValidationMessageFor(x => x.Matricula)
                </div>
                <div class="mb-4">
                    <label asp-for="Nome" class="block mb-2 text-sm font-bold flex items-center"></label>
                    <input asp-for="Nome" class="w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline w-full px-3 py-2 mb-3 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"></input>
                    @Html.ValidationMessageFor(x => x.Nome)
                </div>
                <div class="mb-4">
                    <label asp-for="Setor" class="block mb-2 text-sm font-bold flex items-center"></label>
                    <select asp-for="Setor" class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" asp-items="ViewBag.Setores">
                    </select>
                    @Html.ValidationMessageFor(x => x.Setor)
                </div>

                <div class="mb-4">
                    <label asp-for="DataNascimento" class="block mb-2 text-sm font-bold"></label>
                    <input asp-for="DataNascimento" class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" />
                    @Html.ValidationMessageFor(x => x.DataNascimento)
                </div>
                <div class="mb-4">
                    <label asp-for="Ativo" class="block mb-2 text-sm font-bold"></label>
                    <select asp-for="Ativo" class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline">
                        <option value="1">Ativo</option>
                        <option value="0">Inativo</option>
                    </select>
                    @Html.ValidationMessageFor(x => x.Ativo)
                </div>
                <div class="mb-4">
                    <label asp-for="Turno" class="block mb-2 text-sm font-bold"></label>
                    <select asp-for="Turno" class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline">
                        @foreach (var turno in Turnos.GetTurnos())
                        {
                            <option value="@turno">@turno</option>
                        }
                    </select>
                    @Html.ValidationMessageFor(x => x.Turno)
                </div>
                <div class="mb-4">
                    <label asp-for="Email" class="block mb-2 text-sm font-bold"></label>
                    <input asp-for="Email" class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"/>
                    @Html.ValidationMessageFor(x => x.Email)
                </div>
                <div class="mb-4">
                    <label asp-for="IDLider" class="block mb-2 text-sm font-bold"></label>
                    <select asp-for="IDLider" class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" asp-items="ViewBag.Lideres">
                    </select>
                    @Html.ValidationMessageFor(x => x.Turno)
                </div>                
                <div class="mb-4">
                    <label asp-for="Cargo" class="block mb-2 text-sm font-bold"></label>
                    <input asp-for="Cargo" class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline"/>
                    @Html.ValidationMessageFor(x => x.Cargo)
                </div>
                <div class="mb-4">
                    <label asp-for="Ramal" class="block mb-2 text-sm font-bold"></label>
                    <input asp-for="Ramal" class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" />
                    @Html.ValidationMessageFor(x => x.Ramal)
                </div>
                <div class="mb-4">
                    <label asp-for="FileFoto" class="block mb-2 text-sm font-bold"></label>
                    <input asp-for="FileFoto">
                </div>
                <div class="mb-4">
                    <label asp-for="DataAdmissao" class="block mb-2 text-sm font-bold"></label>
                    <input asp-for="DataAdmissao" class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" />
                    @Html.ValidationMessageFor(x => x.DataAdmissao)
                </div>
                <div class="mb-4">
                    <label asp-for="NumeroCentroCusto" class="block mb-2 text-sm font-bold"></label>
                    <input asp-for="NumeroCentroCusto" class="w-full px-3 py-2 text-sm leading-tight text-gray-700 border rounded shadow appearance-none focus:outline-none focus:shadow-outline" />
                    @Html.ValidationMessageFor(x => x.NumeroCentroCusto)
                </div>
                <div class="my-6">
                    <input type="submit" value="Cadastrar" class="w-full px-4 py-4 font-bold text-white bg-gradient-to-r from-red-300 to-red-500 rounded-full hover:bg-gradient-to-r hover:from-red-500 hover:to-red-300 rounded-full hover:cursor-pointer focus:outline-none focus:shadow-outline" />
                </div>
            </form>
        </div>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
